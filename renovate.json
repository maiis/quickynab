{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Europe/Zurich",
  "schedule": ["every weekend"],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Auto-merge patch and digest updates immediately",
      "matchUpdateTypes": ["patch", "digest"],
      "automerge": true
    },
    {
      "description": "Group all Docker digest updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "groupName": "Docker digests",
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Minor updates - auto-merge after approval",
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "labels": ["minor-update"]
    },
    {
      "description": "Major updates - auto-merge after approval",
      "matchUpdateTypes": ["major"],
      "automerge": true,
      "labels": ["major-update"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "labels": ["dependencies", "renovate"],
  "assignAutomerge": true,
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "prCreation": "immediate",
  "rebaseWhen": "behind-base-branch"
}
